<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCC">

    <com.example.mrson.menudemo.tabbar.HeaderBarTab4Addfriend
        android:id="@+id/headerbar_addfr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerbar_addfr"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout

            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <com.example.mrson.menudemo.peoples.CircleImageView
                android:id="@+id/icon"
                android:layout_width="45dp"

                android:layout_height="45dp"
                android:src="@mipmap/addbyphone" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/icon"
                android:layout_alignTop="@+id/icon"
                android:layout_toLeftOf="@+id/action"
                android:layout_toRightOf="@+id/icon"

                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Thêm bằng số điện thoại"
                android:textSize="7pt" />


        </RelativeLayout>

        <TextView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/layout1"
            android:background="#DADADC" />

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_margin="5dp">

            <com.example.mrson.menudemo.peoples.CircleImageView
                android:id="@+id/icon2"

                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/gtzalo" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/icon2"
                android:layout_alignTop="@+id/icon2"
                android:layout_toLeftOf="@+id/action2"
                android:layout_toRightOf="@+id/icon2"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Giới thiệu Zalo cho bạn bè"
                android:textSize="7pt" />


        </RelativeLayout>

        <TextView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/layout2"
            android:background="#DADADC" />

        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:layout_margin="5dp">

            <com.example.mrson.menudemo.peoples.CircleImageView
                android:id="@+id/icon3"

                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/findface" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/icon3"
                android:layout_alignTop="@+id/icon3"
                android:layout_toLeftOf="@+id/action3"
                android:layout_toRightOf="@+id/icon3"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Tìm bạn từ Facebook"
                android:textSize="7pt" />


        </RelativeLayout>

        <TextView
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/layout2"
            android:background="#DADADC" />

        <RelativeLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@+id/line3"
            android:layout_margin="5dp">

            <com.example.mrson.menudemo.peoples.CircleImageView
                android:id="@+id/icon4"

                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/findgoogle" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/icon4"
                android:layout_alignTop="@+id/icon4"
                android:layout_toRightOf="@+id/icon4"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Tìm bạn từ Google"
                android:textSize="7pt" />


        </RelativeLayout>

        <TextView
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/layout2"
            android:background="#DADADC" />

        <RelativeLayout
            android:id="@+id/layout5"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@+id/line4"
            android:layout_margin="5dp">

            <com.example.mrson.menudemo.peoples.CircleImageView
                android:id="@+id/icon5"

                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/findaround" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/icon5"
                android:layout_alignTop="@+id/icon5"
                android:layout_toRightOf="@+id/icon5"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Quét bạn ở gần"
                android:textSize="7pt" />


        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
