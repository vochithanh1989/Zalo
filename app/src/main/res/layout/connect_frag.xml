<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"

    >
  <LinearLayout
      android:id="@+id/addfriend"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:background="#fff"
      android:padding="10dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_marginTop="10dp"
     >
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@mipmap/ic_actionblue"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Thêm bạn"
          android:layout_gravity="center"
          android:textColor="#000000"/>
  </LinearLayout>
    <TextView
        android:layout_width="325dp"
        android:layout_height="0.1dp"
        android:background="#BBBBBB"
        android:layout_marginLeft="15dp"/>
    <LinearLayout
        android:id="@+id/find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_timquanh"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tìm quanh đây"
            android:layout_gravity="center"
            android:textColor="#000000"/>
        </LinearLayout>
    <TextView
        android:layout_width="325dp"
        android:layout_height="0.1dp"
        android:background="#BBBBBB"
        android:layout_marginLeft="15dp"/>
    <LinearLayout
        android:id="@+id/talk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_room"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phòng trò chuyện"
            android:layout_gravity="center"
            android:textColor="#000000"/>
    </LinearLayout>
    <TextView
        android:layout_width="325dp"
        android:layout_height="0.1dp"
        android:background="#BBBBBB"
        android:layout_marginLeft="15dp"/>
    <LinearLayout
        android:id="@+id/qrcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_qrb"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quét mã QR"
            android:layout_gravity="center"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zalopage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_zalopage"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zalo Page"
            android:layout_gravity="center"
            android:textColor="#000000"/>
    </LinearLayout>
    <TextView
        android:layout_width="325dp"
        android:layout_height="0.1dp"
        android:background="#BBBBBB"
        android:layout_marginLeft="15dp"/>
    <LinearLayout
        android:id="@+id/game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_ga"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game "
            android:layout_gravity="center"
            android:textColor="#000000"/>
    </LinearLayout>


</LinearLayout>