<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff657383"
    android:id="@+id/menu"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff657383"
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/nav_header_container"
        >
        <com.example.mrson.menudemo.peoples.CircleImageView


            android:src="@drawable/p6"
            android:id="@+id/avatar"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp"

            app:border_color="#ffffff"
            app:border_width="1.5dp"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:text="Nguyen Thai Son"
                android:textColor="#ffffff"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status_menu"
                android:text="Test"
                android:textColor="#999999"/>

        </LinearLayout>



    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/drawerList"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@id/nav_header_container"
        android:layout_marginTop="15dp"
        />
    <LinearLayout
        android:layout_below="@+id/drawerList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"


        android:background="#ff657383">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/bong"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bình chọn cho phiên bản mới"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>


</RelativeLayout>

